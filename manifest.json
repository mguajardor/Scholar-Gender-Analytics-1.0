{
  "manifest_version": 3,
  "name": "Scholar Gender Analytics",
  "description": "Visualización de la participación de mujeres en publicaciones científicas",
  "version": "1.0",
  "permissions": ["tabs", "activeTab"],
  "host_permissions": [
    "https://scholar.google.com/*",
    "http://127.0.0.1:8000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://scholar.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
